using System;

namespace Date
{
    class Program
    {
        static void Main(string[] args)
        {
            DateTime date1 = new DateTime(2000, 4, 18);
            DateTime date2 = new DateTime(2020, 4, 18);

            if(date1 > date2)
            {
                Console.WriteLine("date 1 is more recent than:" + date2);
            }
            else if(date1 < date2)
            {
                Console.WriteLine("date 2 is more recent than:" + date1);
            }
            else
            {
                Console.WriteLine("the dates are the same");
            }
        }
    }
}
